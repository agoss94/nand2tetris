/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    And(a = a, b = b, out = outAnd);
    Not(in = outAnd, out = outNotAnd);
    Or(a = a, b = b, out = outOr);
    And(a = outNotAnd, b = outOr, out = out);
}